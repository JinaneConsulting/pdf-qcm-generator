#!/usr/bin/env python3
"""
Script pour générer une clé Fernet valide pour les tests
"""
from cryptography.fernet import Fernet

def main():
    """Génère et affiche une clé Fernet valide"""
    key = Fernet.generate_key()
    print(f"Clé Fernet générée: {key.decode()}")
    print("\nAjoutez cette clé à votre fichier .env.test :")
    print(f"ENCRYPTION_KEY={key.decode()}")

if __name__ == "__main__":
    main()